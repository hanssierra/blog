---
import figma from '@/icon/figma.svg';
import linkedIn from '@/icon/linkedIn.svg';
import istagram from '@/icon/instagram.svg';
import pinterest from '@/icon/pinterest.svg';

const socialMedia = [
    {
        name: 'figma',
        icon: figma,
        link: 'https://www.figma.com/files/user/858817387785830401?fuid=858817387785830401',
    },
    {
        name: 'linkedIn',
        icon: linkedIn,
        link: 'https://www.linkedin.com/in/hans-sierra-0367a7272/',
    },
    {
        name: 'istagram',
        icon: istagram,
        link: 'https://www.instagram.com/hns_srr1/',
    },
    {
        name: 'pinterest',
        icon: pinterest,
        link: 'https://www.pinterest.com/',
    },
];
---

<nav class='w-full py-[26px] px-4 mb-10 md:mb-36'>
    <div class='w-full flex justify-between items-center max-w-[1400px] m-auto'>
        <div class='w-full flex items-center gap-5'>
            <img
                src='favicon.svg'
                alt='hs'
                class='w-full max-w-[30px]'
            />
            <span class='text-xl text-white font-bold'>Hans Sierra</span>
        </div>
        <div class='flex items-center gap-4'>
            {
                socialMedia.map((item) => (
                    <a
                        href={item.link}
                        target='_blank'
                        rel='noopener noreferrer'
                        class='inline-block'
                    >
                        <img src={item.icon} alt={item.name} class='w-[25px]' />
                    </a>
                ))
            }
        </div>
    </div>
</nav>
